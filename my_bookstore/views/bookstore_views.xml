<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bookstore_book_view_form" model="ir.ui.view">
        <field name="name">bookstore.book.form</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author" class="my_author_field"/>
                            <field name="publisher"/>
                        </group>
                        <group>
                            <field name="publication_year"/>
                            <field name="age" readonly="1"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bookstore_book_view_tree" model="ir.ui.view">
        <field name="name">bookstore.book.tree</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <tree string="Books">
                <field name="name"/>
                <field name="author"/>
                <field name="publication_year"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="bookstore_book_view_kanban" model="ir.ui.view">
        <field name="name">bookstore.book.kanban</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_theme_cards">
                <field name="name"/>
                <field name="author"/>
                <field name="publication_year"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <div class="o_kanban_image_default_icon">
                                    <i class="fa fa-book" aria-label="Sách"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_body">
                                    <t t-if="record.author.value">
                                        bởi <field name="author"/>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.publication_year.value">
                                            Năm: <field name="publication_year"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="bookstore_book_action" model="ir.actions.act_window">
        <field name="name">Sách</field>
        <field name="res_model">bookstore.book</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có sách nào, hãy tạo sách mới!
            </p>
        </field>
    </record>

    <menuitem
        id="bookstore_menu_root"
        name="Bookstore"
        sequence="10"/>

    <menuitem
        id="bookstore_book_menu"
        name="Sách"
        parent="bookstore_menu_root"
        action="bookstore_book_action"
        sequence="10"/>

</odoo>