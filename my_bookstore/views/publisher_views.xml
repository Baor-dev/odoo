<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bookstore_publisher_view_form" model="ir.ui.view">
        <field name="name">bookstore.publisher.form</field>
        <field name="model">bookstore.publisher</field>
        <field name="arch" type="xml">
            <form string="Nhà xuất bản">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Sách đã xuất bản">
                            <field name="book_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="author_id"/>
                                    <field name="publication_year"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bookstore_publisher_view_tree" model="ir.ui.view">
        <field name="name">bookstore.publisher.tree</field>
        <field name="model">bookstore.publisher</field>
        <field name="arch" type="xml">
            <list string="Nhà xuất bản">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="bookstore_publisher_action" model="ir.actions.act_window">
        <field name="name">Nhà xuất bản</field>
        <field name="res_model">bookstore.publisher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="bookstore_publisher_menu"
        name="Nhà xuất bản"
        parent="bookstore_menu_root"
        action="bookstore_publisher_action"
        sequence="30"/>
</odoo>