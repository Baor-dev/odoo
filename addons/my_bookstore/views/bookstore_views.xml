<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bookstore_book_view_form" model="ir.ui.view">
        <field name="name">bookstore.book.form</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <field name="cover_image" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên sách..."/>
                        </h1>
                        <h4>
                            <span class="text-muted">bởi</span>
                            <field name="author_id" class="my_author_field" placeholder="Tên tác giả..."/>
                        </h4>
                    </div>

                    <group>
                        <group>
                            <field name="publisher_id"/>
                        </group>
                        <group>
                        <label for="publication_year"/>
                        <div>
                            <field name="publication_year" class="oe_inline" options="{'grouping': False}"/>

                            <span class="badge text-bg-info ms-2 d-inline-flex align-items-center">
                                <field name="age" nolabel="1"/>
                                <span class="ms-1">tuổi</span>
                            </span>
                        </div>
                        </group>
                    </group>

                    <div class="card mt-4"> <div class="card-header">
                            <h5 class="mb-0">Mô tả chi tiết</h5> </div>
                        <div class="card-body">
                            <field name="description" nolabel="1" placeholder="Mô tả về cuốn sách..."/>
                        </div>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <record id="bookstore_book_view_tree" model="ir.ui.view">
        <field name="name">bookstore.book.tree</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <list string="Books">
                <field name="name"/>
                <field name="author_id"/>
                <field name="publication_year"/>
                <field name="age"/>
            </list>
        </field>
    </record>

    <record id="bookstore_book_view_kanban" model="ir.ui.view">
        <field name="name">bookstore.book.kanban</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_theme_cards">
                <field name="name"/>
                <field name="author_id"/>
                <field name="publication_year"/>
                <field name="cover_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('bookstore.book', 'cover_image', record.id.raw_value)"
                                     alt="Ảnh bìa" class="o_image_64_max"/>
                            </div>

                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_body">
                                    <t t-if="record.author_id.value">
                                        bởi <field name="author_id"/>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.publication_year.value">
                                            Năm: <field name="publication_year"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="bookstore_book_action" model="ir.actions.act_window">
        <field name="name">Sách</field>
        <field name="res_model">bookstore.book</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có sách nào, hãy tạo sách mới!
            </p>
        </field>
    </record>

    <menuitem
        id="bookstore_menu_root"
        name="Bookstore"
        sequence="10"/>

    <menuitem
        id="bookstore_book_menu"
        name="Sách"
        parent="bookstore_menu_root"
        action="bookstore_book_action"
        sequence="10"/>

</odoo>